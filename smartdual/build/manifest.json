{
  "manifest_version": 3,
  "name": "Smartdual",
  "version": "1.0.0",
  "description": "Extension to get a dual display on the webpage you are working on! this will also helps you to manage dual webpages at a same time",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Smartdual",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js",
        "remoteScreen.js"
      ],
      "css" : ["popup.css"]
    }
  ]
}